.form_heading {
  display: block;
  text-align: center;
  margin: 0;
  max-width: 80vw;

  &__title {
    font-family: 'Libre Bodoni', Arial, Helvetica, sans-serif;
    font-weight: 400;
    font-size: 3rem;
    color: #3f3f3f;
    margin: 0;
    margin-bottom: 0;
  }

  &__subtitle {
    font-family: 'Libre Franklin', 'Franklin Gothic Medium', 'Arial Narrow',
      Arial, sans-serif;
    color: #939393;
    font-size: 1.5rem;
    margin: 0;
    margin-top: 0;
  }
}
